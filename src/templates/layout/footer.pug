            .footer__wrap
                .footer__socials
                    a(href="" target="blank").footer__socials-item
                        include ../../images/icons/socials/fb.svg
                    a(href="" target="blank").footer__socials-item
                         include ../../images/icons/socials/twitter.svg
                    a(href="" target="blank").footer__socials-item
                         include ../../images/icons/socials/inst.svg
                    a(href="" target="blank").footer__socials-item
                         include ../../images/icons/socials/youtube.svg
                    a(href="" target="blank").footer__socials-item
                         include ../../images/icons/socials/envelope.svg

                .footer__logo
                    include ../../images/icons/logo.svg

