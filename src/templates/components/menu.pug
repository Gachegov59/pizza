mixin menu()
    section.section._bg-red
        .container
            .menu
                ul.menu__items
                    li.menu__item
                        .menu__item-icon
                            include ../../images/icons/menu/pizza-icon.svg
                        .menu__item-name pizza
                    li.menu__item._active
                        .menu__item-icon
                            include ../../images/icons/menu/burger-icon.svg
                        .menu__item-name burgers
                    li.menu__item
                        .menu__item-icon
                            include ../../images/icons/menu/salad-icon.svg
                        .menu__item-name salads
                    li.menu__item
                        .menu__item-icon
                            include ../../images/icons/menu/taco-icon.svg
                        .menu__item-name tacos
                    li.menu__item
                        .menu__item-icon
                            include ../../images/icons/menu/wrap-icon.svg
                        .menu__item-name wraps
                    li.menu__item
                        .menu__item-icon
                            include ../../images/icons/menu/fries-icon.svg
                        .menu__item-name fries
                    li.menu__item
                        .menu__item-icon
                            include ../../images/icons/menu/salad-icon.svg
                        .menu__item-name salads
                    li.menu__item
                        .menu__item-icon
                            include ../../images/icons/menu/drink-icon.svg
                        .menu__item-name drinks
